<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BusinessMyActivity">


    <LinearLayout
        android:id="@+id/business_my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="15dp"

        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_background"
                android:padding="5dp"

                >

                <ImageView
                    android:id="@+id/business_my_tx"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/login" />

            </LinearLayout>


            <TextView
                android:id="@+id/business_my_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="15dp"
                android:text="root"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


        <!--存放店铺账号，名称与描述-->
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:gravity="top"
            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/business_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="小铭杂货铺"
                android:textColor="#F2FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/business_my_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="我的店铺是一个不一样的店铺"
                android:textColor="#F2FFFFFF"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <!--默认的是横向，所以不需要尽跳转-->
    <LinearLayout
        android:id="@+id/business_my_toolbar_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_my_toolbar"
        android:background="#FFFFFF"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        >

        <RadioButton
            android:id="@+id/order_manage_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:button="@null"
            android:clickable="true"
            android:drawableTop="@drawable/dingdan"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:stateListAnimator="@null"

            android:text="订单管理"

            android:textColor="#9F9F9F"
            android:textStyle="bold" />


        <RadioButton
            android:id="@+id/order_manage_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:button="@null"
            android:clickable="true"
            android:drawableTop="@drawable/pinglun"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:stateListAnimator="@null"

            android:text="评论管理"

            android:textColor="#9F9F9F"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/order_manage_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:button="@null"
            android:clickable="true"
            android:drawableTop="@drawable/yifahuo"
            android:drawablePadding="8dp"

            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="结束订单"

            android:textColor="#9F9F9F"
            android:textStyle="bold" />


    </LinearLayout>


    <!--<FrameLayout-->
    <!--    android:layout_below="@+id/business_my_toolbar"-->
    <!--    android:id="@+id/business_fragment"-->

    <!--    android:layout_marginBottom="61dp"-->
    <!--    android:background="#F5F5F5"-->
    <!--    >-->


    <!--    -->

    <!--</FrameLayout>-->

    <LinearLayout
        android:id="@+id/business_my_toolbar_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_my_toolbar_two"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF" />

        <TextView
            android:id="@+id/business_my_xgdpxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"


            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/xggrxx"
            android:drawableRight="@drawable/path"

            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="修改店铺信息"
            android:textColor="#333333"
            android:textSize="18sp" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF" />

        <TextView
            android:id="@+id/business_my_xgmm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"

            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/gmm"
            android:drawableRight="@drawable/path"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"

            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="修改密码"
            android:textColor="#333333"
            android:textSize="18sp" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF" />

        <TextView

            android:id="@+id/business_my_zx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"

            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/zx"
            android:drawableRight="@drawable/path"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="注销账号"
            android:textColor="#333333"
            android:textSize="18sp" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF" />

        <TextView

            android:id="@+id/business_my_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/exit"
            android:drawableRight="@drawable/path"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:text="退出账号"
            android:textColor="#333333"
            android:textSize="18sp" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/business_main_radio"
        android:background="#DFDFDF" />

    <LinearLayout
        android:id="@+id/business_main_radio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FEFEFE"
        android:orientation="horizontal"
        android:paddingTop="5dp">


        <RadioButton
            android:id="@+id/business_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FEFEFE"
            android:button="@null"
            android:drawableTop="@drawable/home"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="首页"
            android:textColor="#9F9F9F"
            android:textStyle="bold"

            />


        <RadioButton
            android:id="@+id/business_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FEFEFE"
            android:button="@null"
            android:drawableTop="@drawable/add"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="添加商品"
            android:textColor="#9F9F9F"
            android:textStyle="bold"

            />

        <RadioButton
            android:id="@+id/business_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FEFEFE"
            android:button="@null"
            android:drawableTop="@drawable/my"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="我的"
            android:textColor="#9F9F9F"
            android:textStyle="bold"

            />

    </LinearLayout>


</RelativeLayout>


