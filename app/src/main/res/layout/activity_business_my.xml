<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity.BusinessMyActivity">


<LinearLayout
    android:id="@+id/business_my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F24960"
    android:orientation="horizontal"
    android:gravity="center_vertical|center_horizontal"
    android:padding="15dp"

    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/circle_background"
            android:layout_marginTop="20dp"
            android:layout_margin="7dp"

            >
            <ImageView
                android:id="@+id/business_my_tx"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/login"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/business_my_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="root"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal|center_vertical"
            />

    </LinearLayout>




    <!--存放店铺账号，名称与描述-->
    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="top"
        android:layout_marginLeft="20dp"

        >



        <TextView
            android:id="@+id/business_my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小铭杂货铺"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#F2FFFFFF"
            />

        <TextView
            android:id="@+id/business_my_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的店铺是一个不一样的店铺"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:textColor="#F2FFFFFF"
            />

    </LinearLayout>

</LinearLayout>

    <!--默认的是横向，所以不需要尽跳转-->
    <LinearLayout
        android:id="@+id/business_my_toolbar_two"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_my_toolbar"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#FFFFFF"

        >

        <RadioButton
            android:id="@+id/order_manage_m"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textColor="#9F9F9F"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/dingdan"
            android:text="订单管理"
            android:textStyle="bold"
            android:stateListAnimator="@null"

            android:drawablePadding="8dp"

            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            />


        <RadioButton
            android:id="@+id/order_manage_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textColor="#9F9F9F"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/pinglun"
            android:text="评论管理"
            android:textStyle="bold"
            android:stateListAnimator="@null"

            android:drawablePadding="8dp"

            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            />

        <RadioButton
            android:id="@+id/order_manage_finish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textColor="#9F9F9F"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/yifahuo"
            android:text="结束订单"

            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:drawablePadding="8dp"

            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            />




    </LinearLayout>


<!--<FrameLayout-->
<!--    android:layout_below="@+id/business_my_toolbar"-->
<!--    android:id="@+id/business_fragment"-->

<!--    android:layout_marginBottom="61dp"-->
<!--    android:background="#F5F5F5"-->
<!--    >-->


<!--    -->

<!--</FrameLayout>-->

    <LinearLayout
        android:id="@+id/business_my_toolbar_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/business_my_toolbar_two"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"/>
    <TextView
        android:id="@+id/business_my_xgdpxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改店铺信息"


        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:textColor="#333333"

        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/xggrxx"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/path"
        android:layout_marginRight="15dp"
        android:paddingLeft="20dp"
        />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"/>

        <TextView
            android:id="@+id/business_my_xgmm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"

            android:drawableLeft="@drawable/gmm"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/path"
            android:layout_marginRight="15dp"
            android:paddingLeft="20dp"
            />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"/>

        <TextView

            android:id="@+id/business_my_zx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注销账号"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/zx"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/path"
            android:layout_marginRight="15dp"
            android:paddingLeft="20dp"
            />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"/>

        <TextView

            android:id="@+id/business_my_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出账号"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/exit"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"

            android:drawableRight="@drawable/path"
            android:layout_marginRight="15dp"
            android:paddingLeft="20dp"
            />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"/>
    </LinearLayout>



<View
    android:layout_above="@+id/business_main_radio"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#DFDFDF"/>

<LinearLayout
    android:id="@+id/business_main_radio"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:paddingTop="5dp"
    android:background="#FEFEFE"
    android:orientation="horizontal">


    <RadioButton
        android:id="@+id/business_home"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:button="@null"
        android:textColor="#9F9F9F"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/home"
        android:text="首页"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:background="#FEFEFE"

        />


    <RadioButton
        android:id="@+id/business_add"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:button="@null"
        android:textColor="#9F9F9F"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/add"
        android:text="添加商品"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:background="#FEFEFE"

        />

    <RadioButton
        android:id="@+id/business_my"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:button="@null"
        android:textColor="#9F9F9F"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/my"
        android:text="我的"
        android:background="#FEFEFE"
        android:textStyle="bold"
        android:stateListAnimator="@null"

        />

</LinearLayout>



</RelativeLayout>


