<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity.UpdateBusinessMesActivity"
android:orientation="vertical"
android:layout_gravity="center_horizontal|center_vertical"
android:background="@drawable/bac"
    >

<androidx.appcompat.widget.Toolbar
    android:id="@+id/update_business_mes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F24960"
    app:title="修 改 店 铺 信 息"
    app:titleTextColor="#FFFFFF"
    app:navigationIcon="@drawable/back"

    />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal|center_vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">


    <ImageView
        android:id="@+id/update_business_mes_tx"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/upimg"
        android:layout_marginTop="45dp"
        />

    <EditText
        android:id="@+id/update_business_mes_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入店铺名称"
        android:layout_marginTop="12dp"
        android:background="@drawable/circle_background"
        android:padding="12dp"
        />



    <EditText
        android:id="@+id/update_business_mes_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入店铺描述"
        android:inputType="textMultiLine"
        android:layout_marginTop="12dp"

        android:gravity="top"
        android:minLines="5"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        />

    <EditText
        android:id="@+id/update_business_mes_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入店铺类型"
        android:layout_marginTop="12dp"
        android:gravity="top"
        android:background="@drawable/circle_background"
        android:padding="12dp"
        />






    <Button
        android:id="@+id/update_business_mes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#F24960"
        android:textColor="#FFFFFF"
        android:text="修改店铺信息"
        android:foreground="?android:attr/selectableItemBackground"
        android:textStyle="bold"

        />




</LinearLayout>


</LinearLayout>






