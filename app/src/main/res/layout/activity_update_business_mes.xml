<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/bac"
    android:orientation="vertical"
    tools:context=".activity.UpdateBusinessMesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/update_business_mes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/back"
        app:title="修 改 店 铺 信 息"
        app:titleTextColor="#FFFFFF"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">


        <ImageView
            android:id="@+id/update_business_mes_tx"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/upimg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/update_business_mes_name"
                style="@style/MyEditStyle"
                android:layout_width="match_parent"
                android:background="@drawable/circle_background"
                android:hint="请输入店铺名称" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/update_business_mes_des"
                style="@style/MyEditStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:gravity="top"
                android:hint="请输入店铺描述"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minLines="5"
                android:padding="12dp"
                android:scrollbars="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/update_business_mes_type"
                style="@style/MyEditStyle"
                android:layout_width="match_parent"
                android:background="@drawable/circle_background"
                android:hint="请输入店铺地点" />
        </LinearLayout>


        <Button
            android:id="@+id/update_business_mes_button"
            style="@style/MyBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="修改店铺信息"
            android:textStyle="bold"

            />


    </LinearLayout>


</LinearLayout>






