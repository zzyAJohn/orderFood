<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".user.activity.UpdateUserMesActivity"
android:orientation="vertical"
android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/bac"
    >

<androidx.appcompat.widget.Toolbar
    android:id="@+id/reg_user_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F24960"
    app:title="更改信息"
    app:titleTextColor="#FFFFFF"
    app:navigationIcon="@drawable/back"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/reg_user_tx"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:src="@drawable/upimg"
            android:layout_marginTop="45dp"
            />





        <EditText
            android:id="@+id/reg_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入昵称"

            android:background="@drawable/circle_background"
            android:layout_marginTop="12dp"
            android:padding="7dp"
            />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/circle_background"
            android:layout_marginTop="12dp"
            android:padding="7dp"

            >

            <RadioButton
                android:id="@+id/reg_user_man"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="男"
                android:layout_weight="1"
                />

            <RadioButton
                android:id="@+id/reg_user_woman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="女"
                android:layout_weight="1"
                />



        </RadioGroup>

        <EditText
            android:id="@+id/reg_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入家庭住址"

            android:background="@drawable/circle_background"
            android:layout_marginTop="12dp"
            android:padding="7dp"
            />

        <EditText
            android:id="@+id/reg_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入联系方式"

            android:background="@drawable/circle_background"
            android:layout_marginTop="12dp"
            android:padding="7dp"
            />


        <Button
            android:id="@+id/reg_user_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#F24960"
            android:textColor="#FFFFFF"
            android:text="更改个人信息"
            android:foreground="?android:attr/selectableItemBackground"
            />




    </LinearLayout>







</LinearLayout>






