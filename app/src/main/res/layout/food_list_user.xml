<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:orientation="vertical"
    android:background="@drawable/image_round"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >



        <ImageView
            android:id="@+id/food_list_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/login"

            android:layout_margin="7dp"
            android:scaleType="centerCrop"

            android:background="@drawable/image_round"
            android:paddingLeft="5dp"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/food_lis_sale_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东北麻辣烫，炒香味道"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                />


            <TextView
                android:id="@+id/food_lis_sale_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月售：300 份"
                android:layout_marginTop="5dp"
                />


            <TextView
                android:id="@+id/food_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格：20 元"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/food_list_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述：来自传统的酱香麻辣烫"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/user_food_business_tx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login"
            android:layout_margin="7dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_round"
            android:paddingLeft="5dp"
            />


        <TextView
            android:id="@+id/user_food_business_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="小名店铺"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="7dp"
            />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="评分："
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="7dp"
            android:textColor="#FF3D00"
            />

        <TextView
            android:id="@+id/user_food_business_pf"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="5.7分"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="7dp"
            android:textColor="#FF3D00"
            />

    </LinearLayout>






</LinearLayout>

